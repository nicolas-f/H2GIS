<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.h2spatial</groupId>
		<artifactId>h2gis</artifactId>
		<version>0.1-SNAPSHOT</version>
	</parent>
	<groupId>org.h2spatial</groupId>
	<artifactId>h2spatial</artifactId>
	<name>h2spatial</name>
	<version>1.0.1</version>
    <packaging>bundle</packaging>
	<url>http://www.orbisgis.org</url>
	<repositories>
		<repository>
			<id>repo2.maven.org</id>
			<name>Maven2 repository 2</name>
			<url>http://repo2.maven.org/maven2</url>
		</repository>
	</repositories>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.8.2</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.vividsolutions</groupId>
			<artifactId>jts</artifactId>
			<version>1.12</version>
		</dependency>
		<dependency>
			<groupId>com.h2database</groupId>
			<artifactId>h2</artifactId>
			<version>1.3.171</version>
		</dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.enterprise</artifactId>
            <version>4.2.0</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.core</artifactId>
            <version>4.3.1</version>
            <scope>provided</scope>
        </dependency>
	</dependencies>
	<distributionManagement>
		<repository>
			<id>IRSTV</id>
			<name>IRSTV repository</name>
			<url>scp://ateliersig@repo.orbisgis.org:/var/www/repo.orbisgis.org/</url>
		</repository>
	</distributionManagement>
	<build>
		<plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.3.7</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Private-Package>org.h2spatial.internal.*</Private-Package>
                        <Export-Package>org.h2spatial</Export-Package>
                        <Bundle-Activator>org.h2spatial.internal.osgi.Activator</Bundle-Activator>
                        <Bundle-Vendor>IRSTV - FR CNRS 2488</Bundle-Vendor>
                        <Bundle-Category>JDBC</Bundle-Category>
                        <Embed-Dependency>h2;inline=true</Embed-Dependency>
                        <_exportcontents>org.h2,org.h2.*,org.h2spatial</_exportcontents>
                        <Import-Package>
                            javax.transaction.xa;resolution:=optional,
                            org.apache.lucene.analysis;version="[3.0.0,3.1.0)";resolution:=optional,
                            org.apache.lucene.analysis.standard;version="[3.0.0,3.1.0)";resolution:=optional,
                            org.apache.lucene.document;version="[3.0.0,3.1.0)";resolution:=optional,
                            org.apache.lucene.index;version="[3.0.0,3.1.0)";resolution:=optional,
                            org.apache.lucene.queryParser;version="[3.0.0,3.1.0)";resolution:=optional,
                            org.apache.lucene.search;version="[3.0.0,3.1.0)";resolution:=optional,
                            org.apache.lucene.store;version="[3.0.0,3.1.0)";resolution:=optional,
                            org.apache.lucene.util;version="[3.0.0,3.1.0)";resolution:=optional,
                            org.slf4j;resolution:=optional,
                            javax.servlet;resolution:=optional,
                            javax.servlet.http;resolution:=optional,
                            javax.naming;resolution:=optional,
                            javax.naming.spi;resolution:=optional,
                            *</Import-Package>
                    </instructions>
                </configuration>
            </plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
		</plugins>
		<extensions>
			<extension>
				<groupId>org.apache.maven.wagon</groupId> 
				<artifactId>wagon-ssh</artifactId> 
				<version>2.2</version> 
			</extension> 
		</extensions>
	</build>
</project>
